  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.0.0</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName> ${pom.artifactId} </Bundle-SymbolicName>
            <Export-Package> org.opencastproject.scheduler.* </Export-Package>
            <Import-Package>
              org.opencastproject.http,
              org.opencastproject.metadata.dublincore,
              *;resolution:=optional
            </Import-Package>
            <Private-Package>
              net.fortuna.ical4j.*
            </Private-Package>
            <Embed-Dependency>
              ical4j;inline=true
            </Embed-Dependency>
            <Service-Component>
              OSGI-INF/scheduler-service.xml,
              OSGI-INF/scheduler-service-rest.xml
            </Service-Component>
		    <JPA-PersistenceUnits>
		      org.opencastproject.scheduler.impl
		    </JPA-PersistenceUnits>            
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
